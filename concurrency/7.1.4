package main

import (
	"fmt"
	"time"
)

func main() {

	msgChannel := make(chan int)
	go receiver(msgChannel)
	for i := range 3 {
		msgChannel <- i
		time.Sleep(time.Second)
	}
	close(msgChannel)
}

func receiver(msg chan int) {
	for {
		value, more := <-msg
		fmt.Println("value", value)

		if !more {
			return
		}
	}
}
